                        </div>
                    }
                }
            </div>

            <div class="form-group">
                <label class="control-label">Main Image</label><br />
                @if (Model.Images.Any())
                {
                    foreach (var image in Model.Images)
                    {
                        <div>
                            <input type="radio" asp-for="@image.IsMainImage" /> @image.FileName
                        </div>
                    }
                }
            </div>*@

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        function handleDecimalInput(element) {
            var value = element.value;
            // Replace any "," with "." for form submission
            value = value.replace(',', '.');
            // Replace any "." with "," for display to the user
            value = value.replace('.', ',');
            element.value = value;
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
