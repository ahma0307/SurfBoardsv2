@model SurfBoardsv2.Models.Rent


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12">

                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" value="@ViewBag.UserId" class="form-control" />

                </div>



                <div class="form-group">
                    <label asp-for="RentPickDate" class="control-local"></label>
                    <input asp-for="RentPickDate" class="form-control" />
                    <span asp-validation-for="RentPickDate" class="datetime-local"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RentDropDate" class="control-label"></label>
                    <input asp-for="RentDropDate" class="form-control" />
                    <span asp-validation-for="RentDropDate" class="datetime-local"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SurfBoardModels" class="control-label"></label>
                    <input asp-for="SurfBoardModels" class="form-control" />
                    <span asp-validation-for="SurfBoardModels" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
