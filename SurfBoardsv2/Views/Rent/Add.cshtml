@model SurfBoardsv2.Models.Rent
@{
    ViewData["Title"] = "Du har booked surfboardet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Boards</h1>
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-3 shadow rounded">
                <div class="text-center border-bottom mb-3 p-3">
                    <h2 class="text-info">booking now</h2>
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <div class="p-3">
                    <form action="/Rent/Add" method="post" autocomplete="off">
                        <div id="locationDetails">
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-info">Full navn</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.UserId, new {@class = "form-control", placeholder="text"})
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-info">Afhentning af board</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.RentPickDate, new {@class = "form-control", type="datetime-local"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-info">Aflevering af board</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.RentDropDate, new {@class = "form-control", type="datetime-local"})
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-info">SurfboardModel</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.SurfBoardModels, new {@class = "form-control", placeholder="text"})
                            </div>

                        </div>

                        <div class="mb-3">
                            <button class="btn btn-sm p-2 btn-primary" type="button">Previsoly</button>
                            <button class="btn btn-sm p-2 btn-dark" type="reset">Clear</button>
                            <button class="btn btn-sm p-2 btn-success" type="submit">Book now</button>


                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
  </div>
