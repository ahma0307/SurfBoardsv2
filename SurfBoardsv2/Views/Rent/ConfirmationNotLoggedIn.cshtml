@model Tuple<SurfBoardsv2.Models.Rent, SurfBoardsv2.Models.Board>

@{
    ViewData["Title"] = "ConfirmationNotLoggedIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    <h1>Success!</h1>

    <div class="row">
        <div class="col-md-4">
            @*<p>You (@Model.Item1.BoardRenterFirstName) (@Model.Item1.BoardRenterLastName) have rented @Model.Item2.Name</p>*@
            <p>You will have to pick the board up on @Model.Item1.RentPickDate.ToShortDateString() and return it on @Model.Item1.RentDropDate.ToShortDateString()</p>
            <p>May the waves be most bodacious</p>
        </div>
    </div>
}
else
{
    <h1>This page does nothing if you haven't rented a board</h1>
}
